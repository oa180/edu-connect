generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  TEACHER
  STUDENT
}

model User {
  id           String         @id @default(cuid())
  name         String
  email        String         @unique
  password     String
  role         Role
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  deletedAt    DateTime?      @db.Timestamp(6)

  // Relations
  taughtStudents TeacherStudent[] @relation("TeacherStudentsTeacher")
  learnedFrom    TeacherStudent[] @relation("TeacherStudentsStudent")

  sentMessages    ChatMessage[]   @relation("SentMessages")
  receivedMessages ChatMessage[]  @relation("ReceivedMessages")

  groupsOwned  ChatGroup[]
  groupMembers ChatGroupMember[]

  refreshTokens RefreshToken[]

  @@index([role])
  @@index([deletedAt])
}

model TeacherStudent {
  id        String   @id @default(cuid())
  teacher   User     @relation("TeacherStudentsTeacher", fields: [teacherId], references: [id])
  teacherId String
  student   User     @relation("TeacherStudentsStudent", fields: [studentId], references: [id])
  studentId String
  createdAt DateTime @default(now())

  @@unique([teacherId, studentId])
  @@index([studentId])
}

model ChatGroup {
  id        String   @id @default(cuid())
  name      String
  owner     User     @relation(fields: [ownerId], references: [id])
  ownerId   String
  createdAt DateTime @default(now())

  members   ChatGroupMember[]
  messages  ChatMessage[]
}

model ChatGroupMember {
  id        String   @id @default(cuid())
  group     ChatGroup @relation(fields: [groupId], references: [id])
  groupId   String
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime  @default(now())

  @@unique([groupId, userId])
  @@index([userId])
}

model ChatMessage {
  id         String    @id @default(cuid())
  content    String
  sender     User      @relation("SentMessages", fields: [senderId], references: [id])
  senderId   String
  receiver   User?     @relation("ReceivedMessages", fields: [receiverId], references: [id])
  receiverId String?
  group      ChatGroup? @relation(fields: [groupId], references: [id])
  groupId    String?
  createdAt  DateTime  @default(now())
  readAt     DateTime?

  @@index([senderId])
  @@index([receiverId])
  @@index([groupId])
}

model RefreshToken {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  token     String   @db.VarChar(512) @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([expiresAt])
}
